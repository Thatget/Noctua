        if(jQuery("#express_yes").prop('checked')) {
            jQuery("#express_delivery").val("Yes");
            jQuery("#payment_confirmed").val("No");
            jQuery("#transaction_id").val("0");
        }
        ajaxReq();
    });
    jQuery("input[name='delivery_form']").change(function() {
        if(jQuery("#express_yes").prop('checked')) {
            jQuery("#express_delivery").val("Yes");
            jQuery("#payment_confirmed").val("No");
