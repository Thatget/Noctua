<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Magento\Catalog\Ui\DataProvider\Product\Form\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="infosheet" xsi:type="array">
                    <item name="class" xsi:type="string">BL\FileAttributes\Ui\DataProvider\Product\Form\Modifier\File</item>
                    <!-- With sortOrder from 10 to 50 it didn't work in $meta variable in Modifier was empty.-->
                    <item name="sortOrder" xsi:type="number">150</item>
                    <!-- With sortOrder from 10 to 50 it didn't work in $meta variable in Modifier was empty.-->
                </item>
            </argument>
        </arguments>
    </virtualType>
</config>